<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_config_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/poc_gray_D8D8D8"/>

    <com.qmuiteam.qmui.widget.QMUIAnimationListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/qmui_config_color_white"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_below="@+id/text_config_dir"/>

    <TextView
        android:id="@+id/text_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:text="TMFConfig目录还没有配置文件"
        android:textColor="@color/poc_gray_D8D8D8"
        android:visibility="gone"/>
</RelativeLayout>