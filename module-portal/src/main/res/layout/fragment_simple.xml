<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@color/white"
    android:elevation="10dp"
    android:paddingHorizontal="20dp"
    android:focusable="true"
    android:clickable="true"
    tools:context=".NoResultActivity">

    <TextView
        android:id="@+id/content"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/parameter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:text="@string/module_portal_63"/>

    <TextView
        android:id="@+id/parameter"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/content"
        app:layout_constraintBottom_toTopOf="@id/start_btn_a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        tools:text="parameter"/>

    <TextView
        android:id="@+id/start_btn_a"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="@color/app_color_blue"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/parameter"
        app:layout_constraintBottom_toTopOf="@id/start_btn_b"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/module_portal_64"/>

    <TextView
        android:id="@+id/start_btn_b"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="@color/app_color_blue"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/start_btn_a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/module_portal_65"/>

</androidx.constraintlayout.widget.ConstraintLayout>