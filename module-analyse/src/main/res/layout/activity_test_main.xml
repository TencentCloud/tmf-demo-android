<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_height="match_parent">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/et_input_value" />

    <Button
            android:layout_width="match_parent"
            android:text="@string/analyse_login"
            android:id="@+id/click_login"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content" />

    <Button
            android:layout_width="match_parent"
            android:text="@string/analyse_logout"
            android:layout_marginTop="6dp"

            android:id="@+id/click_logout"
            android:layout_height="wrap_content" />

    <Button
            android:layout_width="match_parent"
            android:text="@string/analyse_open_page"
            android:layout_marginTop="6dp"

            android:id="@+id/click_open_page"
            android:layout_height="wrap_content" />

    <Button
            android:layout_width="match_parent"
            android:text="@string/analyse_open_app"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:id="@+id/click_start_app"
            android:layout_height="wrap_content" />

    <Button
            android:layout_width="match_parent"
            android:text="@string/analyse_app_use_time"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:id="@+id/click_app_use_time"
            android:layout_height="wrap_content" />
    <Button
            android:layout_width="match_parent"
            android:text="@string/analyse_set_default_location"
            android:layout_marginTop="6dp"
            android:id="@+id/set_default_location"
            android:layout_height="wrap_content" />
    <Button
            android:layout_width="match_parent"
            android:text="@string/analyse_custom_report"
            android:layout_marginTop="6dp"
            android:id="@+id/custom_event_report"
            android:layout_height="wrap_content" />
</LinearLayout>