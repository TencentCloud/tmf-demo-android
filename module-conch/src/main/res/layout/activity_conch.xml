<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <TextView
        android:id="@+id/tv_conch_registered"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/et_conch_id"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tv_conch_registered"
        android:hint="@string/conch_activity_input_id"
        android:text="6396"
        style="@style/edittext_border"/>


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_pull_conch"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_conch_list"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:text="@string/conch_activity_pull_conch"
        app:qmui_radius="4dp" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_conch_list"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="@string/conch_activity_conch_list"
        app:qmui_radius="4dp" />

    <TextView
        android:padding="20dp"
        android:background="@color/poc_gray_F4F4F4"
        android:layout_below="@id/et_conch_id"
        android:layout_above="@id/btn_pull_conch"
        android:id="@+id/tv_conch_log"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>