<resources>

    <!-- Base application theme. -->
    <style name="AppletAppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/applet_color_primary</item>
        <item name="colorPrimaryDark">@color/applet_color_primary_dark</item>
        <item name="colorAccent">@color/applet_color_accent</item>
    </style>

    <style name="applet_edittext_border">
        <item name="android:background">@drawable/applet_edittext_border</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:maxHeight">150dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TmfBottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TmfBottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/tmf_translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/tmf_translate_dialog_out</item>
    </style>
</resources>
